<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>SurveyReportServlet</servlet-name>
        <servlet-class>com.scripps.growler.SurveyReportServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SpeakerReportServlet</servlet-name>
        <servlet-class>com.scripps.growler.SpeakerReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SurveyReportServlet</servlet-name>
        <url-pattern>/SurveyReportServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SpeakerReportServlet</servlet-name>
        <url-pattern>/SpeakerReportServlet</url-pattern>
    </servlet-mapping>
    <error-page> 
        <error-code>400</error-code> 
        <location>/error/error400.jsp</location> 
    </error-page>
    <error-page> 
        <error-code>403</error-code> 
        <location>/error/error403.jsp</location> 
    </error-page>
    <error-page> 
        <error-code>404</error-code> 
        <location>/error404.jsp</location> 
    </error-page>
    <error-page> 
        <error-code>500</error-code> 
        <location>/error/error500.jsp</location> 
    </error-page>
    <error-page> 
        <error-code>503</error-code> 
        <location>/error/error503.jsp</location> 
    </error-page>
</web-app>
